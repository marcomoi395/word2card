{
  "name": "word2card",
  "version": "1.0.0",
  "description": "Convert Word documents to flashcards with TTS.",
  "author": "youngmarco <marcomoi395@gmail.com>",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w"
  },
  "build": {
    "appId": "word2card.ym",
    "productName": "Word2Card",
    "asar": true,
    "directories": {
      "output": "release/${os}"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "icon.png",
      "synopsis": "Convert Word to cards with TTS"
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0",
    "nodemon": "^3.1.7"
  }
}
